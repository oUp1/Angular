{
    "compileOnSave": false,
    "compilerOptions": {
      "baseUrl": "src",
      "sourceMap": true,
      "declaration": false,
      "downlevelIteration": true,
      "experimentalDecorators": true,
      "module": "esnext",
      "moduleResolution": "node",
      "target": "es2015",
      "noImplicitAny": false,
      "typeRoots": [
        "node_modules/@types"
      ],
      "lib": [
        "es2018",
        "dom"
      ]
    },
      "files": [
          "src/main.ts",
          "src/polyfills.ts"
      ],
      "include": [
          "src/**/*.d.ts"
      ]
  }